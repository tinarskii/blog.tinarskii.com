<%= form_with model: @user, url: users_path do |form| %>
  <%= form.email_field :email, required: true, placeholder: "Email" %><br>
  <%= form.text_field :username, required: true, placeholder: "Username" %><br>
  <%= form.text_field :name, required: false, placeholder: "Name" %><br>
  <%= form.text_area :bio, required: false, placeholder: "Bio" %><br>
  <%= form.password_field :password, required: true, placeholder: "Password" %><br>
  <%= link_to "Login", new_user_path %>
  <%= form.submit "Register!" %>
<% end %>