<div class="flex min-h-screen mx-4 my-12">
  <div class="flex flex-col gap-6 w-full lg:mx-12">
    <div class="flex flex-col gap-2 items-center justify-center">
      <h1 class="font-krona text-5xl">
        BLOG SPACE
      </h1>
      <p class="font-kanit text-sm text-gray-400">
        A blog space for all your thoughts
      </p>
    </div>
    <div class="grid grid-cols-3 w-full gap-2">
      <% @articles.each do |article| %>
        <div
          class="card card-compact w-128 bg-base-300 shadow-xl cursor-pointer"
          onclick="window.location.href='<%= article_path(article) %>'"
        >
          <figure>
            <img src="<%= article.cover_url %>" alt="Article <%= article.id %> cover image" />
          </figure>
          <div class="card-body">
            <h2 class="card-title">
              <%= truncate article.title %>
            </h2>
            <p>
              <%= truncate article.body %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <a href="/articles">
      <button class="w-full px-4 py-2 btn btn-primary">
        View all articles
      </button>
    </a>
  </div>
</div>